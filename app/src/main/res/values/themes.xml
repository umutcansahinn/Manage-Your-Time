<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ManageYourTime" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="ThemeSplashApi" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_light_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.ManageYourTime</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="marginHorizontal">16dp</item>
        <item name="hintTextColor">@color/md_theme_light_primary</item>
        <item name="android:textColorHint">@color/md_theme_light_onSurfaceVariant</item>
        <item name="boxStrokeColor">@color/md_theme_light_primary</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="buttonTint">@color/md_theme_light_primary</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="buttonTint">@color/md_theme_light_primary</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>